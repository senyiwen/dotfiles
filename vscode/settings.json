{
  // ========== 编辑器配置 ==========
  "editor.fontLigatures": false, // 禁用字体连字
  "editor.scrollBeyondLastLine": false, // 关闭最后一行滚动
  // "editor.detectIndentation": false, // 空格转TAB，已禁用
  // "editor.quickSuggestions": {
  //   "other": true, // 启用代码其他部分的快速建议
  //   "comments": true, // 启用注释中的快速建议
  //   "strings": false // 启用字符串中的快速建议
  // },
  // "editor.defaultFormatter": "esbenp.prettier-vscode", // 保留注释，已禁用
  // "editor.fontVariations": false, // 禁用字体变种
  // "markdown.preview.fontSize": 16,
  "editor.minimap.enabled": false, // 禁用编辑器中的迷你地图
  "editor.fontSize": 13, // 设置编辑器字体大小
  "editor.tabSize": 2, // 设置 Tab 缩进大小
  "editor.wordWrap": "on", // 粘贴时自动格式化代码
  "editor.fontFamily": "'JetBrains Mono','Input Mono','Cascadia Mono',Monaco, Menlo,'Courier New', monospace", // 设置编辑器字体
  "editor.guides.bracketPairs": "active", // 显示括号匹配的引导线
  "editor.cursorBlinking": "expand", // 设置光标闪烁模式
  "editor.cursorSmoothCaretAnimation": "on", // 启用光标平滑动画
  "editor.lineNumbers": "interval", // 控制行号的显示。
  "editor.renderWhitespace": "none", // 控制编辑器在空白字符上显示符号的方式
  "editor.linkedEditing": true, // 启用链接编辑功能
  "editor.dragAndDrop": false, // 禁用编辑器拖放功能
  // "editor.unicodeHighlight.invisibleCharacters": false, // 禁用 Unicode 隐形字符的高亮显示。
  "workbench.sideBar.location": "left", // 将侧边栏放到左侧
  "workbench.iconTheme": "vscode-icons", // 使用 Material 图标主题
  "workbench.colorTheme": "Vitesse Dark", // 使用 Vitesse Dark 主题
  "workbench.preferredDarkColorTheme": "Vitesse Dark",
  "workbench.preferredLightColorTheme": "Evondev Dracula Normal Contrast",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 16,
  "workbench.tree.enableStickyScroll": true, // 启用粘性滚动。
  // "workbench.fontAliasing": "antialiased", // 启用反锯齿字体渲染。
  "workbench.list.smoothScrolling": true, // 启用平滑滚动列表。
  // ========== Prettier 配置 ==========
  // "prettier.vueIndentScriptAndStyle": true, // 保留注释，已禁用
  "prettier.singleQuote": true, // 使用单引号
  "prettier.semi": false, // 禁用结尾的分号
  "prettier.enable": false,
  // ========== 终端配置 ==========
  "terminal.integrated.fontFamily": "'JetBrains Mono','Input Mono','Fira Code',Menlo,Monaco, 'Courier New', monospace", // 设置终端字体
  // "terminal.integrated.fontSize": 18, // 设置终端字体大小
  // "terminal.external.osxExec": "iTerm.app", // 设置外部终端（macOS）
  "terminal.integrated.cursorBlinking": true, // 启用终端光标闪烁
  "terminal.integrated.cursorStyle": "line", // 设置终端光标样式
  // "terminal.integrated.cursorWidth": 2, // 设置终端光标宽度
  "terminal.integrated.persistentSessionReviveProcess": "never",
  // "terminal.integrated.fontWeight": "300", // 设置终端字体的粗细为 300。
  // "terminal.integrated.fontWeightBold": "normal",
  // ========== Git 配置 ==========
  "git.autofetch": true, // 自动获取最新的 Git 仓库内容
  "git.confirmSync": false, // 禁用 Git 同步时的确认提示
  "git.enableSmartCommit": true, // 启用智能提交
  "git.openRepositoryInParentFolders": "never", // 从不在父文件夹中打开 Git 仓库
  "git.untrackedChanges": "separate",
  "githubIssues.workingIssueFormatScm": "#${issueNumberLabel}",
  "githubPullRequests.fileListLayout": "tree",
  // ========== 文件操作配置 ==========
  "files.trimTrailingWhitespace": true, // 自动删除行尾空白字符
  "files.autoSave": "onWindowChange", // 在窗口更改时自动保存文件
  "files.autoSaveDelay": 5000, // 自动保存延迟 5 秒
  "search.exclude": {
    "**/node_modules": true, // 搜索时排除 node_modules
    "**/.DS_Store": true, // 排除 .DS_Store 文件
    "**/.git": true, // 排除 .git 文件夹
    "**/.gitignore": true, // 排除 .gitignore 文件
    "**/.idea": true, // 排除 .idea 文件夹
    "**/.vscode": true, // 排除 .vscode 文件夹
    "**/.nuxt": true, // 排除 .nuxt 文件夹
    "**/build": true, // 排除 build 文件夹
    "**/dist": true,
    "CHANGELOG.md": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true,
    "**/.history": true // 排除 .history 文件夹
  },
  // ========== 界面配置 ==========
  "window.dialogStyle": "custom",
  "window.zoomLevel": 1.5, // 设置窗口缩放级别
  "window.nativeTabs": true, // 禁用原生标签栏
  "window.title": "${rootName}", // this make tabs more readable
  "window.titleBarStyle": "custom",
  "breadcrumbs.enabled": false, // 禁用路径面包屑导航
  "window.autoDetectColorScheme": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true, // 高亮显示修改过的标签页。
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  // ========== ESLint 配置 ==========
  // "eslint.format.enable": true, // 保留注释，已禁用
  // "editor.codeActionsOnSave": {
  //   "source.fixAll": "never",
  //   "source.fixAll.eslint": "explicit", // 在保存时修复 ESLint 错误
  //   "source.organizeImports": "never" // 在保存时不自动整理导入
  // },
  // ========== 其他配置 ==========
  "typescript.locale": "zh-CN", // 设置 TypeScript 语言为简体中文
  "GitCommitPlugin.ShowEmoji": false, // 禁用 Git 提交时显示表情符号
  "GitCommitPlugin.MaxSubjectCharacters": 80, // 限制 Git 提交标题最大字符数
  "Lingma.DisplayLanguage": "简体中文", // 设置 Lingma 插件语言为简体中文
  "Lingma.localMachineModel": false, // 禁用本地机器模型
  "Lingma.cloudModelAutoTriggerDisplayRule": false, // 禁用云模型自动触发规则
  // ========== 文件嵌套 ==========
  // this might not be up to date with the repo, please check yourself
  // https://github.com/antfu/vscode-file-nesting-config
  "explorer.fileNesting.enabled": true, // 启用文件嵌套功能
  "explorer.fileNesting.expand": false, // 禁用文件嵌套的展开功能
  "explorer.fileNesting.patterns": {
    "*.js": "$(capture).js.map, $(capture).*.js, $(capture)_*.js, $(capture).d.ts, $(capture).js.flow",
    "*.jsx": "$(capture).js, $(capture).*.jsx, $(capture)_*.js, $(capture)_*.jsx, $(capture).css, $(capture).module.css, $(capture).less, $(capture).module.less, $(capture).module.less.d.ts, $(capture).scss, $(capture).module.scss, $(capture).module.scss.d.ts",
    "*.ts": "$(capture).js, $(capture).d.ts.map, $(capture).*.ts, $(capture)_*.js, $(capture)_*.ts",
    "*.tsx": "$(capture).ts, $(capture).*.tsx, $(capture)_*.ts, $(capture)_*.tsx, $(capture).css, $(capture).module.css, $(capture).less, $(capture).module.less, $(capture).module.less.d.ts, $(capture).scss, $(capture).module.scss, $(capture).module.scss.d.ts, $(capture).css.ts",
    "*.env": "$(capture).env.*",
    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .mailmap, .git-blame*",
    "*.module.ts": "$(capture).resolver.ts, $(capture).controller.ts, $(capture).service.ts",
    "Dockerfile": "*.dockerfile, .devcontainer.*, .dockerignore, captain-definition, compose.*, docker-compose.*, dockerfile*",
    "nuxt.config.*": "*.env, .babelrc*, .codecov, .cssnanorc*, .env.*, .envrc, .htmlnanorc*, .lighthouserc.*, .mocha*, .nuxtignore, .nuxtrc, .postcssrc*, .terserrc*, api-extractor.json, ava.config.*, babel.config.*, capacitor.config.*, content.config.*, contentlayer.config.*, cssnano.config.*, cypress.*, env.d.ts, formkit.config.*, formulate.config.*, histoire.config.*, htmlnanorc.*, i18n.config.*, ionic.config.*, jasmine.*, jest.config.*, jsconfig.*, karma*, lighthouserc.*, panda.config.*, playwright.config.*, postcss.config.*, puppeteer.config.*, react-router.config.*, rspack.config.*, sst.config.*, svgo.config.*, tailwind.config.*, tsconfig.*, tsdoc.*, uno.config.*, unocss.config.*, vitest.config.*, vuetify.config.*, webpack.config.*, windi.config.*",
    "README.md": "README*,CHANGELOG*,LICENSE,CNAME",
    "package.json": "pnpm-lock.yaml,pnpm-workspace.yaml,.gitpod.yml,.npmrc,.browserslistrc,.node-version,.tazerc.json,.nvmrc,.versionrc.*,eslint*,.eslint*,prettier*,.prettier*,.stylelint*,stylelint*,lint-staged*,.lintstaged*,commitlint*,.editorconfig",
    "shims.d.ts": "*.d.ts",
    "vite.config.*": "*.env, .babelrc*, .codecov, .cssnanorc*, .env.*, .envrc, .htmlnanorc*, .lighthouserc.*, .mocha*, .postcssrc*, .terserrc*, api-extractor.json, ava.config.*, babel.config.*, capacitor.config.*, content.config.*, contentlayer.config.*, cssnano.config.*, cypress.*, env.d.ts, formkit.config.*, formulate.config.*, histoire.config.*, htmlnanorc.*, i18n.config.*, ionic.config.*, jasmine.*, jest.config.*, jsconfig.*, karma*, lighthouserc.*, panda.config.*, playwright.config.*, postcss.config.*, puppeteer.config.*, react-router.config.*, rspack.config.*, sst.config.*, svgo.config.*, tailwind.config.*, tsconfig.*, tsdoc.*, uno.config.*, unocss.config.*, vitest.config.*, vuetify.config.*, webpack.config.*, windi.config.*",
    "vue.config.*": "*.env, .babelrc*, .codecov, .cssnanorc*, .env.*, .envrc, .htmlnanorc*, .lighthouserc.*, .mocha*, .postcssrc*, .terserrc*, api-extractor.json, ava.config.*, babel.config.*, capacitor.config.*, content.config.*, contentlayer.config.*, cssnano.config.*, cypress.*, env.d.ts, formkit.config.*, formulate.config.*, histoire.config.*, htmlnanorc.*, i18n.config.*, ionic.config.*, jasmine.*, jest.config.*, jsconfig.*, karma*, lighthouserc.*, panda.config.*, playwright.config.*, postcss.config.*, puppeteer.config.*, react-router.config.*, rspack.config.*, sst.config.*, svgo.config.*, tailwind.config.*, tsconfig.*, tsdoc.*, uno.config.*, unocss.config.*, vitest.config.*, vuetify.config.*, webpack.config.*, windi.config.*",
  },
  // ========== 其他设置 ==========
  // "emmet.syntaxProfiles": {
  //   "vue-html": "html",
  //   "vue": "html"
  // }, // 设置 Emmet 对 Vue 的支持
  // "liveServer.settings.donotShowInfoMsg": true, // 禁用 Live Server 插件的提示信息
  "cSpell.language": "en,en-US", // 设置拼写检查语言为英文（美国）。
  "cSpell.allowCompoundWords": true, // 允许复合词拼写检查。
  "cSpell.userWords": [
    "niaoyoo",
    "Nuxt",
    "unocss",
    "VITE",
    "vueuse"
  ], // 忽略同步的设置
  "scss.lint.unknownAtRules": "ignore",
  // ========== 扩展同步配置 ==========
  "settingsSync.ignoredExtensions": [], // 忽略同步的扩展
  "settingsSync.ignoredSettings": [],
  "terminal.integrated.smoothScrolling": true,
  "editor.smoothScrolling": true,
  // "debug.javascript.autoAttachFilter": "disabled",
  "explorer.compactFolders": false,
  "Lingma.methodQuickOperation": false,
  "Lingma.cloudModelAutoTriggerGenerateLength": "disable",
  "commentTranslate.sourceLanguage": "zh-CN",
  "projectManager.tags": [
    "Personal",
    "Work",
    "ui",
    "nestjs"
  ],
  "projectManager.vscode.maxDepthRecursion": 2,
  "projectManager.any.maxDepthRecursion": 2,
  "projectManager.git.baseFolders": [
    "/Users/senyiwen/Git"
  ],
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "extensions.ignoreRecommendations": true,
  "files.exclude": {
    "**/.idea": true
  },
  "window.customTitleBarVisibility": "never",
}
